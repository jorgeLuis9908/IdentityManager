@model InventarioViewModel
    <font face="Comic Sans MS,Arial,Verdana" size="10" color="black">
        <h1 class="text-info"> Inventario</h1>
    </font>
    <form asp-controller="Account" asp-action="Inventario" method="post" role="form">
        <link rel="stylesheet" href="~/css/original.css" />
        <font face="Comic Sans MS,Arial,Verdana" size="8" color="black">
            <h4>Registro de Productos</h4>
        </font>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Codigo" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Nombre" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cantidad" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="precio" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <button type="submit" class="btn btn-success form-control"> Registrar</button>
            </div>
        </div>
    </form>

    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
