@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<br />
<div class="row">
    <div class="col-6">
        <font face="Comic Sans MS,Arial,Verdana" size="8" color="black">
            <h2 class="text-primary">Lista de Roles </h2>
        </font>

        <div align="center">
            <img src="/image/roles.jpg" width="400"
                 height="341">
        </div>
        <link rel="stylesheet" href="~/css/roles.css" />
    </div>
    <div class="col-6 text-right">

        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Crear Nuevo Rol</a>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    EDITAR
                                </a>

                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                        class="btn btn-danger">
                                    ELIMINAR
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>