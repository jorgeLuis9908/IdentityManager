@model ForgotPasswordViewModel

    <font face="Comic Sans MS,Arial,Verdana" size="6" color="black" >
        <h1 class="text-info">¿Olvidaste tu Contraseña?</h1>
    </font>
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
                <h4>Ingresa tu Correo.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success form-control">Enviar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>


    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }