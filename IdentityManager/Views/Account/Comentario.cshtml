@model ComentarioViewModel
    <font face="Comic Sans MS,Arial,Verdana" size="8" color="Black">
        <h1 class="text-info"> Comentarios</h1>
    </font>
    <form asp-controller="Account" asp-action="Inventario" method="post" role="form">
        <link rel="stylesheet" href="~/css/formulario.css" />
        <font face="Comic Sans MS,Arial,Verdana" size="4" color="Fuchsia">
            <h4>Nos gustaria que dejes tu comentario</h4>
        </font>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <section class="form-register">

            <div class="form-group">
                <label asp-for="Nombre" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="comentario" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="comentario" class="form-control" />
                    <span asp-validation-for="comentario" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-success form-control"> Registrar</button>

        </section>
    </form>

    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
