@page
@model ExternalLoginModel
    <font face="Comic Sans MS,Arial,Verdana" size="4" color="black">
        @{ ViewData["Title"] = "Registrar"; }

        <h1>@ViewData["Title"]</h1>
        <h4 id="external-login-title">Asocia tu @Model.ProviderDisplayName cuenta.</h4>
        <hr />

        <p id="external-login-description" class="text-info">
           Te has autenticado correctamente con  <strong>@Model.ProviderDisplayName</strong>.
          Ingrese una dirección de correo electrónico para este sitio a continuación y haga clic en el botón
            de registro para terminar de iniciar sesión.
        </p>

        <div class="row">
            <div class="col-md-4">
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Registrar</button>
                </form>
            </div>
        </div>
    </font>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
